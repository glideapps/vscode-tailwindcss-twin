{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node", "vscode", "webpack-env", "tailwind-types"],
    "rootDir": "..",
    "paths": {
      "~/*": ["./*"],
      "@": ["./common/index.ts"],
      "@/*": ["./common/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json", "../package.json", "../package.nls*.json"],
  "exclude": ["**/__tests__/**", "**/*.test.ts"]
}
